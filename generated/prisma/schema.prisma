// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  STAFF
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  role          Role       @default(STAFF)
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  orders        Order[]
  auditLogs     AuditLog[]
  expenses      Expense[]  @relation("UserExpenses")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// POS System Models
// ==========================================

// Category - หมวดหมู่สินค้า
model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  color     String? // สีสำหรับแสดง UI
  sortOrder Int       @default(0) // ลำดับการแสดง
  isActive  Boolean   @default(true)
  deletedAt DateTime? // soft delete
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  products Product[]
}

// Product - เมนูที่ขายหน้าร้าน
model Product {
  id         String    @id @default(cuid())
  name       String
  nameTh     String? // ชื่อภาษาไทย
  price      Float // ราคาขาย
  cost       Float?    @default(0) // ต้นทุนสินค้า
  image      String? // รูปภาพสินค้า
  categoryId String? // FK to Category
  isActive   Boolean   @default(true)
  deletedAt  DateTime? // soft delete
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  category   Category?    @relation(fields: [categoryId], references: [id])
  recipe     RecipeItem[] // สูตรการผลิต
  orderItems OrderItem[] // รายการสั่งซื้อ
}

// Ingredient - วัตถุดิบหลังร้าน
model Ingredient {
  id           String    @id @default(cuid())
  name         String
  unit         String // หน่วย (ml, g, piece)
  costPerUnit  Float // ต้นทุนต่อหน่วย
  currentStock Float     @default(0) // สต็อกคงเหลือ
  minStock     Float     @default(0) // จุดสั่งซื้อใหม่
  deletedAt    DateTime? // soft delete
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  usedIn    RecipeItem[] // ใช้ในสูตรไหนบ้าง
  stockLots StockLot[] // ล็อตสต็อก
}

// RecipeItem - สูตรการผลิต (เชื่อม Product กับ Ingredient)
model RecipeItem {
  id           String @id @default(cuid())
  productId    String
  ingredientId String
  amountUsed   Float // จำนวนที่ใช้ต่อ 1 แก้ว

  product    Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@unique([productId, ingredientId])
}

// Order - รายการขาย
model Order {
  id            String   @id @default(cuid())
  orderNumber   String   @unique
  totalAmount   Float // ยอดรวมสินค้า
  discount      Float    @default(0) // ส่วนลด
  netAmount     Float // ยอดสุทธิ (totalAmount - discount)
  paymentMethod String // cash, qr, card, delivery
  status        String   @default("completed") // pending, completed, cancelled
  customerName  String? // ชื่อลูกค้า (optional)
  note          String? // หมายเหตุ
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdById   String?

  createdBy User?       @relation(fields: [createdById], references: [id])
  items     OrderItem[]
}

// OrderItem - รายการสินค้าในออเดอร์
model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int
  unitPrice   Float // ราคาต่อชิ้น ณ เวลาขาย
  cost        Float   @default(0) // ต้นทุนรวม ณ เวลาขาย
  sweetness   Int     @default(100) // 0, 50, 100
  toppings    String? // JSON string: Array<{ id, name, price }>
  toppingCost Float   @default(0) // ราคา topping รวม
  note        String? // หมายเหตุรายรายการ

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

// Topping - ท็อปปิ้งที่เพิ่มราคา
model Topping {
  id       String  @id @default(cuid())
  name     String
  nameTh   String?
  price    Float // ราคาเพิ่ม
  isActive Boolean @default(true)
}

// StockLot - ล็อตสต็อกสำหรับติดตามต้นทุน
model StockLot {
  id           String   @id @default(cuid())
  ingredientId String
  quantity     Float // จำนวนที่รับเข้า
  costPerUnit  Float // ต้นทุนล็อตนี้
  remainingQty Float // คงเหลือ
  note         String?
  createdAt    DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
}

// AuditLog - บันทึกการกระทำสำคัญ
model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String // CREATE_ORDER, VOID_ORDER, EDIT_STOCK, EDIT_PRODUCT
  entityId  String? // ID ของ entity ที่เกี่ยวข้อง
  details   String? // JSON details
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

// Expense - รายจ่ายทั่วไป (ไม่ใช่วัตถุดิบ)
model Expense {
  id          String   @id @default(cuid())
  title       String // ชื่อรายจ่าย
  amount      Float // จำนวนเงิน
  category    String // rent, utilities, labor, marketing, equipment, supplies, other
  description String? // รายละเอียดเพิ่มเติม
  date        DateTime @default(now()) // วันที่เกิดรายจ่าย
  createdById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy User? @relation("UserExpenses", fields: [createdById], references: [id])
}
